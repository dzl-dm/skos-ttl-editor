{
	"name": "skos-ttl-editor",
	"publisher": "markstoehr",
	"displayName": "SKOS Turtle Editor",
	"description": "",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/dzl-dm/skos-ttl-editor.git"
	},
	"languages": [{
		"id": "turtle",
		"extensions": [".ttl"]
	}],
	"activationEvents": [
		"onLanguage:turtle",
		"onCommand:skos-ttl-editor.startMarkdown"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "skos-ttl-editor.addConcept",
				"title": "Add Concept"
			},
			{
				"command": "skos-ttl-editor.appendToScheme",
				"title": "Append Concept to Scheme"
			},
			{
				"command": "skos-ttl-editor.appendSubtreeToScheme",
				"title": "Append Subtree to Scheme"
			},
			{
				"command": "skos-ttl-editor.complementFiles",
				"title": "Load all files in workspace",
				"icon": {
				  "light": "resources/light/add_documents.svg",
				  "dark": "resources/dark/add_folder.svg"
				}
			},
			{
				"command": "skos-ttl-editor.reload",
				"title": "Load only current file",
				"icon": {
				  "light": "resources/light/refresh.svg",
				  "dark": "resources/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "skos-ttl-editor.addConcept",
					"when": "view == skosOutline"
				},
				{
					"command": "skos-ttl-editor.appendToScheme",
					"when": "view == skosOutline"
				},
				{
					"command": "skos-ttl-editor.appendSubtreeToScheme",
					"when": "view == skosOutline"
				}
			],
			"view/title": [
				{
					"command": "skos-ttl-editor.complementFiles",
					"when": "view == skosOutline",
					"group": "navigation"
				},
				{
					"command": "skos-ttl-editor.reload",
					"when": "view == skosOutline",
					"group": "navigation"
				}
			]
		},		
		"configuration":{
			"title": "SKOS Turtle Editor",
			"properties": {
				"skos-ttl-editor.customAutoCompletePredicates": {
					"type": "object",
					"default": {
						"prov:": ["wasDerivedFrom"],
						"rdf:": ["hasPart","partOf"],
						"dc:": ["description"],
						"dwh:": ["restriction"],
						":": ["unit","status","displayLabel"]
					},
					"description": "Defines custom autocomplete predicates."
				},
				"skos-ttl-editor.customAutoCompleteObjects": {
					"type": "object",
					"default": {
						"dwh:": ["integerRestriction","stringRestriction","largeStringRestriction","floatRestriction","partialDateRestriction","dateRestriction"]
					},
					"description": "Defines custom autocomplete objects."
				},
				"skos-ttl-editor.customIcons": {
					"type": "object",
					"default": [
						{
							"rule": "dwh:restriction dwh:integerRestriction",
							"icon": "number"
						},
						{
							"rule": "dwh:restriction dwh:floatRestriction",
							"icon": "number"
						}
					],
					"description": "Defines rules for custom treeview icons."
				}
			}
		},
		"views": {
            "skos-explorer": [
                {
                    "id": "skosOutline",
                    "name": "Skos Outline"
				}
            ]
		},
		"viewsContainers": {
			"activitybar": [
			  {
				"id": "skos-explorer",
				"title": "Skos Explorer",
				"icon": "media/skos2.svg"
			  }
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
